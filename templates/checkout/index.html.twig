{% extends 'base.html.twig' %}

{% block title %}Recapitulation commande{% endblock %}

{% block body %}
   <div class="section checkout">
        <div class="container">
         {{ form_start(checkout)}}
            <div class="row">
                <div class="col-md-6">
                    <div class="heading_s1">
                            <h4>Choisir une adresse de livraison</h4>
                            <div class="content">
                                 {{ form_widget(checkout.address) | replace({'[spr]' : '<br>'}) | raw}}
                            </div>
                            <a href="{{ path('app_address_new')}}" class="btn btn-fill-out btn-block mt-1">Nouvelle adresse</a>
                    </div>
                    <div class="heading_s1">
                        <h4>Choisir un transporteur</h4>
                        <div class="content">
                            {{ form_widget(checkout.transport)  | replace({'[spr]' : '<br>'}) | raw }}
                        </div>
                    </div>
                    <div class="heading_s1">
                        <h4>Informations pour le livreur</h4>
                        <div class="form-group mb-0">
                          {{ form_widget(checkout.informations) }}
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="order_review">
                        <div class="heading_s1">
                            <h4>Votre commande</h4>
                        </div>
                        <div class="table-responsive order_table">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Produit</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                 {% for element in cart %}
                                   
                                        <tr>
                                            <td> {{ element.produit.titre }} <span class="product-qty">x {{ element.quantity }}</span></td>
                                            <td>  {{ element.produit.prix/100 }} €</td>
                                        </tr>
                                 {% endfor %}
                                </tbody>
                                <tfoot>
                                    
                                    <tr>
                                        <th>Total</th>
                                        <td class="product-subtotal">{{ total }} € </td>
                                    </tr>
                                </tfoot>

                            </table>
                        </div>
                        <div class="payment_method">
                            <div class="heading_s1">
                                <h4>Payment</h4>
                            </div>
                            
                        </div>
                        <button type="submit" id="checkout" class="btn btn-fill-out btn-block">Paiement</button>
                    </div>
                </div>
            </div>
           {{ form_end(checkout) }}
        </div>
    </div>

{% endblock %}